<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key" />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    @if (ViewBag.jobs != null)
    {
        <h3>@ViewBag.jobs.Count Results(s)</h3>


            <table class="job-listing">

                @foreach (var jobs in @ViewBag.jobs)
                {
                    <tr>
                        <td>
                            ID: @jobs.Id <br />
                            Name: @jobs.Name <br />
                            Employer: @jobs.Employer <br />
                            Location: @jobs.Location <br />
                            Position Type: @jobs.PositionType <br />
                            Skill: @jobs.CoreCompetency
                        </td>
                    </tr>

                }
            </table>
            <br />
        }

    </div>